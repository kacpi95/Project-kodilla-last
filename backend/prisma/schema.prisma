generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id Int @id @default(uuid())
  title String 
  description String
  price Decimal
  image String
  orderItems OrderItem[]
}

model Order {
  id Int @id @default(uuid())
  customName String
  email String
  address String
  createdAt DateTime @default(now())
  items OrderItem[]
}

model OrderItem {
  id Int @id @default(uuid())
  quantity Int
  note String?
  price Decimal
  order Order @relation(fields: [orderId], references: [id])

  product Product @relation(fields: [productId], references: [id])
  productId Int
}