generator client {
  provider = "prisma-client-js"
   url      = env("DATABASE_URL")
}

datasource db {
  provider = "mysql"
}

model Product {
  id          String      @id @default(uuid())
  title       String
  description String
  price       Decimal
  image       String
  orderItems  OrderItem[]
}

model Order {
  id           String      @id @default(uuid())
  customerName String
  email        String
  address      String
  createdAt    DateTime    @default(now())
  items        OrderItem[]
}

model OrderItem {
  id        String   @id @default(uuid())
  quantity  Int
  note      String?
  price     Decimal

  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String

  product   Product @relation(fields: [productId], references: [id])
  productId String
}
